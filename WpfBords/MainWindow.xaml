<Window x:Class="WpfBords.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBords"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="BallCanvas" Height="437" Width="750"  VerticalAlignment="Center" Margin="2,0,15,0">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.501"/>
                    <RotateTransform/>
                    <TranslateTransform X="5.818"/>
                </TransformGroup>

            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</Window>
